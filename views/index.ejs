<div class="author">
    <h1 class="author__heading">Hi, I am Nikola.</h1>
    <p class="author__body">Web developer and content creator for this project.</p>
</div>

<img src="/img/author.jpeg" alt="person looking on the horizon" class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles__heading">Latest Posts</h2>

    <ul class="article-ul">

        <% data.forEach(post=> { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span> <%= post.title %> </span>
                    <span class="article__date"><%=post.createdAt.toDateString()%></span>
                </a>
            </li>
       <% }) %>



    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

   


</section>